<div class="col-md-6 post-list" ontouchstart="">
  <%= link_to post, class: "post-item" do %>
    <div class="post-item--side">
      <div class="post-item--image">
        <%= image_tag post.image.url(:thumb), class: "post-item--image__item" %>
      </div>
    </div>
    <div class="post-item--main">
      <p class="post-item--main_title"><%= post.title %></p>
      <p class="post-item--main_info">
        <span class="post-item--main_info__category">
          <%= post.category.name %>
        </span>
        <span class="post-item--main_info__date">
          <%= post.created_at.to_s(:published_on) %>
        </span>
      </p>
    </div>
  <% end %>
</div>
